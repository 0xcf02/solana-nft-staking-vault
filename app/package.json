{
  "name": "nft-staking-vault-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "precommit": "npm run lint && npm run type-check && npm run test",
    "bundle-size": "npm run build && npx bundlesize",
    "perf": "npm run build && npx lighthouse http://localhost:3000 --output=json --output=html --output-path=./lighthouse-report",
    "clean": "rm -rf .next out node_modules/.cache"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.96.0",
    "@solana/spl-token": "^0.4.8",
    "@metaplex-foundation/mpl-token-metadata": "^3.2.1",
    "@metaplex-foundation/js": "^0.20.1",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/jest": "^29.5.12",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "@playwright/test": "^1.41.2",
    "@axe-core/playwright": "^4.8.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.39",
    "@next/bundle-analyzer": "^14.2.5",
    "bundlesize": "^0.18.1",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "bundlesize": [
    {
      "path": ".next/static/chunks/pages/*.js",
      "maxSize": "100kb"
    },
    {
      "path": ".next/static/chunks/*.js",
      "maxSize": "200kb"
    }
  ]
}